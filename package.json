{
  "name": "@nick-bull/loggers",
  "type": "module",
  "main": "./src/index.js",
  "imports": {
    "#root": "./src",
    "#root/*": "./src/*"
  },
  "exports": {
    "import": "./src/index.js",
    "require": "./lib/index.js"
  },
  "description": "",
  "version": "0.0.0",
  "author": {
    "name": "Nick Bull",
    "username": "nick-bull",
    "email": "nick@bull.dev",
    "url": "https://bull.dev"
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-bull/loggers.git",
    "baseUrl": "git+https://github.com/nick-bull"
  },
  "bugs": {
    "url": "https://github.com/nick-bull/loggers/issues"
  },
  "homepage": "https://github.com/nick-bull/loggers#readme",
  "scripts": {
    "build": "NODE_OPTIONS=--experimental-json-modules babel src --out-dir lib",
    "dev": "node --experimental-json-modules --es-module-specifier-resolution=node src/index.js",
    "start": "node lib/index.js",
    "gh:push": "git push -u origin master",
    "prepublishOnly": "npm run build",
    "publish:public": "npm publish --access public",
    "publish:patch": "npm run eslint && npm version patch && npm run publish:public",
    "publish:minor": "npm run eslint && npm version minor && npm run publish:public",
    "publish:major": "npm run eslint && npm version major && npm run publish:public",
    "lint": "npx eslint **/src/**/*.js",
    "lint:files": "npm run eslint | grep ^[\\w/].*\\.js",
    "test": "jest --verbose --coverage --passWithNoTests",
    "test:update": "npm test --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "npm test && open ./coverage/lcov-report/index.html"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.[jt]s?(x)"
    ],
    "rootDir": "."
  }
}
