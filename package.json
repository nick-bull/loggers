{
  "name": "@nick-bull/loggers",
  "description": "A collection of loggers for different environments",
  "type": "module",
  "extension": "js",
  "main": "lib/index.js",
  "imports": {
    "#root": "./src",
    "#root/*": "./src/*",
    "#console": "./src/console",
    "#console/*": "./src/console/*",
    "#terminal": "./src/terminal",
    "#terminal/*": "./src/terminal/*",
    "#browser": "./src/browser",
    "#browser/*": "./src/browser/*"
  },
  "exports": {
    "./transformers": "./lib/transformers.js",
    "./console": "./lib/console/index.js",
    "./console/*": "./lib/console/*",
    "./terminal": "./lib/terminal/index.js",
    "./terminal/*": "./lib/terminal/*",
    "./browser": "./lib/browser/index.js",
    "./browser/*": "./lib/browser/*"
  },
  "version": "0.0.0",
  "author": {
    "name": "Nick Bull",
    "username": "nick-bull",
    "email": "nick@bull.dev",
    "url": "https://bull.dev"
  },
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-bull/loggers.git",
    "baseUrl": "git+https://github.com/nick-bull"
  },
  "bugs": {
    "url": "https://github.com/nick-bull/loggers/issues"
  },
  "homepage": "https://github.com/nick-bull/loggers#readme",
  "scripts": {
    "build": "babel src --out-dir lib",
    "dev": "node --es-module-specifier-resolution=node src/index.js",
    "start": "node lib/index.js",
    "gh:push": "git push -u origin master",
    "prepublishOnly": "npm run build",
    "publish:public": "npm publish --access public",
    "publish:patch": "npm run eslint && npm version patch && npm run publish:public",
    "publish:minor": "npm run eslint && npm version minor && npm run publish:public",
    "publish:major": "npm run eslint && npm version major && npm run publish:public",
    "test": "jest --verbose --coverage --passWithNoTests",
    "test:update": "npm test --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "npm test && open ./coverage/lcov-report/index.html",
    "eslint": "npx eslint **/src/**/*.js",
    "eslint:files": "npm run eslint | grep ^[\\w/].*\\.js"
  },
  "dependencies": {
    "color": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^26.6.3",
    "load-json-file": "^6.2.0",
    "prettier": "^2.2.1"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.[jt]s?(x)"
    ],
    "rootDir": "."
  }
}
